<% @order_items.each do |item| %>
<h3><b><%= item.product.name%></b></h3>
<h3><b><%= item.product.price %></b></h3>
<%= form_with model: item do |f|%>
<%= f.hidden_field :product_id, value: item.product.id %>
<b><%= f.number_field :quantity, value: item.quantity.to_i,   min: 1%><b>
<%= f.submit "Update Cart" %>
<%= link_to "Remove Items", item, method: :delete, remote: true %>
<%= link_to "Back to Menu", menu_path%>
<%= link_to "Checkout" ,payment_index_path%>

<% end %>
<h2>Subtotal: <%= item.total %></h2>
<% end %>


<b><h4>Your current order has a total of: <%= current_order.subtotal %></b></h4>