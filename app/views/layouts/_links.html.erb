 <% if user_signed_in?%>
  <div class="col-2">
<h5 class ="link-container">
  

<%= link_to "Home", root_path, class: "link #{@page == 'home' ? 'active' : ''}" if params[:controller].eql?('pages') && params[:action].eql?('home')%>
</h5>

<h5 class ="link-container">
<%= link_to "Menu", menu_path, class: "link #{@page == 'menu' ? 'active' : ''}" if params[:controller].eql?('pages') && params[:action].eql?('home')%>
</h5>
</h5>
<h5 class ="link-container">
<%= link_to "Cart", cart_path, class: "link #{@page == 'categories' ? 'active' : ''}" %>
</h5>
<% if current_user.admin?%>  
<h5 class ="link-container">
<%= link_to "Products", products_path, class: "link #{@page == 'products' ? 'active' : ''}" if params[:controller].eql?('pages') && params[:action].eql?('home')%>
</h5>
<h5 class ="link-container">
<%= link_to "Add-Categories", categories_path, class: "link #{@page == 'categories' ? 'active' : ''}" if params[:controller].eql?('pages') && params[:action].eql?('home')%>
</h5>

<%end%>




<h5 class ="link-container">
    <%= link_to "Sign Out", destroy_user_session_path, method: :delete  ,:style=>'color: white;'%>
</h5>
</div>
 <%else%>
<div class="col-2">
<h5 class ="link-container">
  <h5 class ="link-container" style="text-align: right">
      <%= link_to "Sign Up", new_user_registration_path if params[:controller].eql?('pages') && params[:action].eql?('home') %>
      </h5>
      <h5 class ="link-container" style="text-align: right">
      <%= link_to "Log In", new_user_session_path if params[:controller].eql?('pages') && params[:action].eql?('home') %>
      </h5>
</h5>
</div>
<%end%>


