<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr >
       <th colspan="1">Name </th>
       <th colspan="3">Description </th>
       <th colspan="2">Price </th>
       <th colspan="1">Vegeterian </th>
       <th colspan="1">Available </th>
       <th colspan="1">Catering </th>
       <th colspan="1">Featured </th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr >
        <td colspan="1"><%= product.name %></td>
        <td colspan="3"><%= product.description %></td>
        <td colspan="2"><b><%= product.price %></b></td>
        <td colspan="1"><%= product.vegeterian %></td>
        <td colspan="1"><%= product.available %></td>
        <td colspan="1"><%= product.catering %></td>
        <td colspan="1"><%= product.featured %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

